    height: 50px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, transform 0.2s ease;
    color: {{ block.settings.nav_button_text_color }};
  }

