    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .ai-testimonials-slider__avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
