<script>
  (function() {
    class TestimonialsSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoSlideInterval = null;
        this.isHovered = false;}

      connectedCallback() {
        this.track = this.querySelector('.ai-testimonials-slider__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-testimonials-slider__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-testimonials-slider__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-testimonials-slider__next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-testimonials-slider__dots-{{ ai_gen_id }}');

        this.autoSlide = this.dataset.autoSlide === 'true';
        this.slideSpeed = parseInt(this.dataset.slideSpeed) * 1000;
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';

        this.slidesPerView = this.getSlidesPerView();
        this.totalSlides = Math.ceil(this.slides.length / this.slidesPerView);

        this.setupEventListeners();
        this.createDots();
        this.updateSlider();
        this.handleResize();

        if (this.autoSlide) {
          this.startAutoSlide();
        }
      }

      getSlidesPerView() {
        const width = window.innerWidth;
        if (width <= 768) return 1;
        if (width <= 1024) return 2;
        return 3;
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.prevSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());

        if (this.pauseOnHover) {
          this.addEventListener('mouseenter', () => {
            this.isHovered = true;
            this.stopAutoSlide();
          });

          this.addEventListener('mouseleave', () => {
            this.isHovered = false;
            if (this.autoSlide) {
              this.startAutoSlide();
            }
          });
        }

        window.addEventListener('resize', () => this.handleResize());
      }

      createDots() {
        this.dotsContainer.innerHTML = '';
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-testimonials-slider__dot-{{ ai_gen_id }}`;
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      handleResize() {
        const newSlidesPerView = this.getSlidesPerView();
        if (newSlidesPerView !== this.slidesPerView) {
          this.slidesPerView = newSlidesPerView;
          this.totalSlides = Math.ceil(this.slides.length / this.slidesPerView);
          this.currentSlide = Math.min(this.currentSlide, this.totalSlides - 1);
          this.createDots();
          this.updateSlider();
        }
      }

      updateSlider() {
        const translateX = -this.currentSlide * (100 / this.slidesPerView);
        this.track.style.transform = `translateX(${translateX}%)`;

        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide >= this.totalSlides - 1;

        const dots = this.querySelectorAll('.ai-testimonials-slider__dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlider();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateSlider();
        } else if (this.autoSlide) {
          this.currentSlide = 0;
          this.updateSlider();
        }
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      startAutoSlide() {
        if (this.autoSlide && this.slideSpeed > 0) {
          this.autoSlideInterval = setInterval(() => {
            if (!this.isHovered) {
              this.nextSlide();
            }
          }, this.slideSpeed);
        }
      }

      stopAutoSlide() {
        if (this.autoSlideInterval) {
          clearInterval(this.autoSlideInterval);
          this.autoSlideInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoSlide();
        window.removeEventListener('resize', () => this.handleResize());
      }
    }

    customElements.define('testimonials-slider-{{ ai_gen_id }}', TestimonialsSlider{{ ai_gen_id }});
  })();
</script>

