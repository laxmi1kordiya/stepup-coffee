{% doc %}
  @prompt
  Create a collections grid section that displays multiple collections in a responsive grid layout. Include settings to
  control the number of columns, collection selection, and image display options. Add a setting to choose between round
  (circular) or square image shapes for the collection images. Include options for section padding, background colors,
  and text styling. Make it responsive with proper mobile layouts.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collections-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collections-grid__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collections-grid__heading-{{ ai_gen_id }} {
    display: flex;
    justify-content:  {{ block.settings.tab_alignment }};
    text-align: center;
    margin-bottom: 40px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
  }

  .ai-collections-grid__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collections-grid__item-{{ ai_gen_id }} {
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-collections-grid__item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-collections-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 16px;
    overflow: hidden;
    {% if block.settings.image_shape == 'round' %}
      border-radius: 50%;
    {% else %}
      border-radius: {{ block.settings.image_border_radius }}px;
    {% endif %}
  }

  .ai-collections-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collections-grid__item-{{ ai_gen_id }}:hover .ai-collections-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collections-grid__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collections-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collections-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_title_size }}px;
    font-weight: 600;
    margin-bottom: 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-collections-grid__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.4;
  }

  .ai-collections-grid__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
    margin-top: 4px;
  }

  @media screen and (max-width: 768px) {
    .ai-collections-grid__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-collections-grid__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-collections-grid__heading-{{ ai_gen_id }} {
      margin-bottom: 30px;
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-collections-grid__grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.5 }}px;
    }
  }

  @media screen and (max-width: 768px) {
  .ai-collections-grid__grid-{{ ai_gen_id }} {
    {% if block.settings.mobile_layout == 'scroll' %}
      display: flex;
      flex-wrap: nowrap;
    {% else %}
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    {% endif %}
  }

  .ai-collections-grid__item-{{ ai_gen_id }} {
    {% if block.settings.mobile_layout == 'scroll' %}
      flex: 0 0 auto;
      width: 80%;
      scroll-snap-align: start;
    {% endif %}
  }
}

{% endstyle %}

<div class="ai-collections-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collections-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collections-grid__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-collections-grid__grid-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% assign collection_key = 'collection_' | append: i %}
        {% assign collection = block.settings[collection_key] %}
        {% if collection != blank %}
          <a
            href="{{ collection.url }}"
            class="ai-collections-grid__item-{{ ai_gen_id }}"
          >
            <div class="ai-collections-grid__image-wrapper-{{ ai_gen_id }}">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 400 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-collections-grid__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-collections-grid__placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-collections-grid__content-{{ ai_gen_id }}">
              <h3 class="ai-collections-grid__title-{{ ai_gen_id }}">
                {{ collection.title }}
              </h3>

              {% if block.settings.show_description and collection.description != blank %}
                <p class="ai-collections-grid__description-{{ ai_gen_id }}">
                  {{ collection.description | truncate: 100 }}
                </p>
              {% endif %}

              {% if block.settings.show_product_count %}
                <div class="ai-collections-grid__count-{{ ai_gen_id }}">
                  {{ collection.products_count }}
                  {% if collection.products_count == 1 %}
                    product
                  {% else %}
                    products
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

