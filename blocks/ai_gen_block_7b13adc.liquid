{% doc %}
  @prompt
    Create a collection list section with a grid layout featuring collection cards. Each card should display the collection image, title, and product count. Include customizable settings for grid columns, spacing, card styling, text alignment, and color options. Add blocks for individual collection selection with options to customize each collection's display settings.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-list-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-list__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-list__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    color: {{ block.settings.heading_color }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-collection-list__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;}

  .ai-collection-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-collection-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;font-weight: {{ block.settings.title_weight }};
  }

  .ai-collection-card__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
    margin: 0;
  }

  .ai-collection-card__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: {{ block.settings.card_padding }}px;
    color: white;
  }

  .ai-collection-card__overlay-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-collection-card__overlay-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    margin: 0;
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .ai-collection-list__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-collection-list__container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-collection-card__content-{{ ai_gen_id }},
    .ai-collection-card__overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-collection-list__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}<div class="ai-collection-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-list__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collection-list__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}<div class="ai-collection-list__grid-{{ ai_gen_id }}">
      {% for collection in block.settings.collections limit: block.settings.collections_limit %}
        {% if collection != blank %}
          <a href="{{ collection.url }}" class="ai-collection-card-{{ ai_gen_id }}">
            <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-collection-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: block.settings.image_aspect_ratio }}"
                >
              {% else %}
                <div class="ai-collection-card__image-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              {% if block.settings.show_overlay %}
                <div class="ai-collection-card__overlay-{{ ai_gen_id }}">
                  <h3 class="ai-collection-card__overlay-title-{{ ai_gen_id }}">
                    {{ collection.title }}
                  </h3>
                  {% if block.settings.show_product_count %}
                    <p class="ai-collection-card__overlay-count-{{ ai_gen_id }}">
                      {{ collection.products_count }}{% if collection.products_count == 1 %}
                        {{ block.settings.product_singular_text }}
                      {% else %}
                        {{ block.settings.product_plural_text }}
                      {% endif %}
                    </p>
                  {% endif %}
                </div>
              {% endif %}
            </div>

            {% unless block.settings.show_overlay %}
              <div class="ai-collection-card__content-{{ ai_gen_id }}">
                <h3 class="ai-collection-card__title-{{ ai_gen_id }}">
                  {{ collection.title }}
                </h3>
                {% if block.settings.show_product_count %}
                  <p class="ai-collection-card__count-{{ ai_gen_id }}">
                    {{ collection.products_count }}
                    {% if collection.products_count == 1 %}
                      {{ block.settings.product_singular_text }}
                    {% else %}
                      {{ block.settings.product_plural_text }}
                    {% endif %}
                  </p>
                {% endif %}</div>
            {% endunless %}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

