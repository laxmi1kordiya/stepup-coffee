      height: 16px;
    }
  }
{% endstyle %}

<testimonials-slider-{{ ai_gen_id }}
  class="ai-testimonials-slider-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <div class="ai-testimonials-slider__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-testimonials-slider__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-testimonials-slider__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-testimonials-slider__container-{{ ai_gen_id }}">
    <div class="ai-testimonials-slider__track-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'testimonial_' | append: i | append: '_image'
          assign name_key = 'testimonial_' | append: i | append: '_name'
          assign text_key = 'testimonial_' | append: i | append: '_text'
          assign rating_key = 'testimonial_' | append: i | append: '_rating'

          assign testimonial_image = block.settings[image_key]
          assign testimonial_name = block.settings[name_key]
          assign testimonial_text = block.settings[text_key]
          assign testimonial_rating = block.settings[rating_key]
        %}

        {% if testimonial_name != blank and testimonial_text != blank %}
          <div class="ai-testimonials-slider__slide-{{ ai_gen_id }}">
            <div class="ai-testimonials-slider__image-wrapper-{{ ai_gen_id }}">
              {% if testimonial_image %}
                <img
                  src="{{ testimonial_image | image_url: width: 200 }}"
                  alt="{{ testimonial_name | escape }}"
                  class="ai-testimonials-slider__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>

            <div class="ai-testimonials-slider__rating-{{ ai_gen_id }}">
              {% for star in (1..5) %}
                <svg
                  class="ai-testimonials-slider__star-{{ ai_gen_id }}"
                  viewBox="0 0 24 24"
                  {% if star <= testimonial_rating %}
                    fill="currentColor"
                  {% else %}
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  {% endif %}
                >
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                </svg>
              {% endfor %}
            </div>

            <p class="ai-testimonials-slider__text-{{ ai_gen_id }}">
              "{{ testimonial_text }}"
            </p>

            <h3 class="ai-testimonials-slider__name-{{ ai_gen_id }}">
              {{ testimonial_name }}
            </h3>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-testimonials-slider__nav-{{ ai_gen_id }} ai-testimonials-slider__nav--prev-{{ ai_gen_id }}"
      aria-label="Previous testimonial"
      type="button"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15,18 9,12 15,6"></polyline>
      </svg>
    </button>

    <button
      class="ai-testimonials-slider__nav-{{ ai_gen_id }} ai-testimonials-slider__nav--next-{{ ai_gen_id }}"
      aria-label="Next testimonial"
      type="button"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9,18 15,12 9,6"></polyline>
      </svg>
    </button>
  </div>

  <div class="ai-testimonials-slider__dots-{{ ai_gen_id }}"></div>
</testimonials-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-testimonials-slider__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-testimonials-slider__slide-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-testimonials-slider__nav--prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-testimonials-slider__nav--next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-testimonials-slider__dots-{{ ai_gen_id }}');
        
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) || 5000;

        this.init();
      }

      init() {
        if (this.slides.length === 0) return;

        this.createDots();
        this.updateSlider();
        this.bindEvents();

        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      createDots() {
        const slidesPerView = this.getSlidesPerView();
        const totalDots = Math.ceil(this.slides.length / slidesPerView);

        for (let i = 0; i < totalDots; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-testimonials-slider__dot-{{ ai_gen_id }}`;
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      getSlidesPerView() {
        const width = window.innerWidth;
        if (width <= 768) return 1;
        if (width <= 1024) return 2;
        return 3;
      }

      updateSlider() {
        const slidesPerView = this.getSlidesPerView();
        const slideWidth = 100 / slidesPerView;
        const maxSlide = Math.ceil(this.slides.length / slidesPerView) - 1;

        if (this.currentSlide > maxSlide) {
          this.currentSlide = maxSlide;
        }

        const translateX = -(this.currentSlide * 100);
        this.track.style.transform = `translateX(${translateX}%)`;

        this.slides.forEach((slide, index) => {
          slide.style.flex = `0 0 calc(${slideWidth}% - ${slidesPerView === 1 ? '0px' : slidesPerView === 2 ? '10px' : '14px'})`;
        });

        this.updateDots();
        this.updateNavButtons();
      }

      updateDots() {
        const dots = this.querySelectorAll('.ai-testimonials-slider__dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      updateNavButtons() {
        const slidesPerView = this.getSlidesPerView();
        const maxSlide = Math.ceil(this.slides.length / slidesPerView) - 1;
        
        this.prevBtn.style.opacity = this.currentSlide === 0 ? '0.5' : '1';
        this.nextBtn.style.opacity = this.currentSlide === maxSlide ? '0.5' : '1';
      }

      goToSlide(slideIndex) {
        if (this.isTransitioning) return;
        
        const slidesPerView = this.getSlidesPerView();
        const maxSlide = Math.ceil(this.slides.length / slidesPerView) - 1;
        
        this.currentSlide = Math.max(0, Math.min(slideIndex, maxSlide));
        this.updateSlider();
        this.resetAutoplay();
      }

      nextSlide() {
        if (this.isTransitioning) return;
        
        const slidesPerView = this.getSlidesPerView();
        const maxSlide = Math.ceil(this.slides.length / slidesPerView) - 1;
        
        if (this.currentSlide < maxSlide) {
          this.currentSlide++;
        } else {
          this.currentSlide = 0;
        }
        
        this.updateSlider();
        this.resetAutoplay();
      }

      prevSlide() {
        if (this.isTransitioning) return;
        
        const slidesPerView = this.getSlidesPerView();
        const maxSlide = Math.ceil(this.slides.length / slidesPerView) - 1;
        
        if (this.currentSlide > 0) {
          this.currentSlide--;
        } else {
          this.currentSlide = maxSlide;
        }
        
        this.updateSlider();
        this.resetAutoplay();
      }

      startAutoplay() {
        if (!this.autoplay) return;
        
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      bindEvents() {
        this.prevBtn.addEventListener('click', () => this.prevSlide());
        this.nextBtn.addEventListener('click', () => this.nextSlide());

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay) this.startAutoplay();
        });

        window.addEventListener('resize', () => {
          this.updateSlider();
        });

        this.track.addEventListener('transitionstart', () => {
          this.isTransitioning = true;
        });

        this.track.addEventListener('transitionend', () => {
          this.isTransitioning = false;
        });
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('testimonials-slider-{{ ai_gen_id }}', TestimonialsSlider{{ ai_gen_id }});
  })();
</script>

